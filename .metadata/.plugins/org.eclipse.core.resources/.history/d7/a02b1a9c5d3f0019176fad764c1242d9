package nBack;

import java.util.Scanner;

public class NBackApplication {
	private String aktuelleSerie = "";
	private int n;
	
	public double starteTest(int n, int reizdauerMs, String serie, Scanner scanner) {
		String input = "";
		int korrektErraten = 0;
		this.aktuelleSerie = serie;
		this.n = n;
		
		for(int iterator = 0; iterator < serie.length(); iterator++) {
			
			input = scanner.next();

			if (hatKorrektErraten(n, serie, input, korrektErraten, iterator)) korrektErraten++;
		}
		
		return new Double(korrektErraten * 100 / serie.length() );
	}

	private boolean hatKorrektErraten(int n, String serie, String input, int korrektErraten, int iterator) {
		if (input.equalsIgnoreCase("j")) {
			try {
				if (serie.charAt(iterator) == serie.charAt(iterator - n)) {
					return true;
				}
			} catch (Exception e) {
				return false;
			}
		} else {
			try {
				if (serie.charAt(iterator) != serie.charAt(iterator - n)) {
					return true;
				}					
			} catch (Exception e) {
				return true;
			}
		}
		
		return false;
	}
}
