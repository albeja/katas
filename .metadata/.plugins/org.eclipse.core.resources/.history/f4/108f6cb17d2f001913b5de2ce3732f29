public class GalgenTest {

	@Test
	public void test() {
		Galgenmännchen spiel = new Galgenmännchen("developer");
		
		assertEquals("---------", spiel.rateBuchstabe('u'));
		assertEquals("---------", spiel.rateBuchstabe('e'));
		assertEquals("---------", spiel.rateBuchstabe('n'));
		assertEquals("---------", spiel.rateBuchstabe('o'));
		assertEquals("---------", spiel.rateBuchstabe('r'));
		assertEquals("---------", spiel.rateBuchstabe('a'));
		assertEquals("---------", spiel.rateBuchstabe('d'));
		assertEquals("---------", spiel.rateBuchstabe('l'));
		assertEquals("---------", spiel.rateBuchstabe('p'));
		assertEquals("---------", spiel.rateBuchstabe('v'));

		fail("Not yet implemented");
	}

}
