package tictactoe;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

public class SpieleEvaluatorTest {
	Spielbrett brett;
	
	@Before
	public void setUp() throws Exception {
		brett = new Spielbrett();
	}

	@Test
	public void unentschiedenEvaluieren() throws Exception {
		brett.zug(0, 1);
		brett.zug(1, 2);
		brett.zug(2, 1);
		brett.zug(3, 2);
		brett.zug(4, 1);
		brett.zug(5, 2);
		brett.zug(6, 1);
		brett.zug(8, 2);
		brett.zug(7, 1);
		assertTrue(brett.hasZahlEineReihe(1));
		assertTrue(brett.isJedesFeldBelegt());
	}

}
